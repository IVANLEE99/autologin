{
  "manifest_version": 2,

  "name": "AutoLogin",
  "description": "AutoLogin",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
      "scripts": [
          "bg.js"
      ]
  },
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["jquery.min.js","myscript.js"]
    }
  ],
  "permissions": [
    "http://*/*", 
    "https://*/*",
    "activeTab",
    "storage",
    "tabs"
  ]
}
